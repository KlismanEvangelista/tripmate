          <li class="nav-item d-flex dropdown">
            <%= link_to "#", class: "notifications position-relative me-3 nav-link dropdown-toggle", data: { bs_toggle: "dropdown" }, id: "notificationsDropdown", aria: { expanded: "false" }, data: { action: "click->navbar#toggleDropdown" } do %>
