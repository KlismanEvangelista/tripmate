                    <%= request.plan.name %>
                  </div>
                <% end %>

              <% end %>
              <% if @my_requests_not_viewed.empty? %>
                <i class="bi bi-x-circle"></i>
                <a class="dropdown-item" href="#">No tienes nuevas solicitudes</a>
              <% end %>
            </div>
          </li>
          <%console%>


          <li class="nav-item">
            <%= link_to "Todos los planes", plans_path, class: "btn btn-outline btn-sm me-2" %>
