                <p class="title flex-grow-1">Solicitudes de viajes</p>
                <%= link_to "Ver todos", my_requests_path, class: "nav-link" %>
              </div>
              <% @my_requests_not_viewed.each do |request| %>
                <%= button_to mark_as_viewed_travel_path(request), method: :patch, remote: true, class: "dropdown-item" do %>
                  <% if request.user.photo.attached? %>
                    <%= cl_image_tag request.user.photo.key, class: "avatar", alt: "dropdown menu" %>
                  <% else %>
                    <%= image_tag "user.png", class: "avatar", alt: "dropdown menu" %>
                  <% end %>
