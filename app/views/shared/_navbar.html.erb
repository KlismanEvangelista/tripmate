                <span class="point position-absolute bg-danger border rounded-circle">
                  <%= @my_requests_not_viewed.count %>
                  <span class="visually-hidden">New alerts</span>
                </span>
              <% end %>
            <% end %>
            <div class="dropdown-menu dropdown-notifications dropdown-menu-right" aria-labelledby="notificationsDropdown" data-navbar-target="menu">
