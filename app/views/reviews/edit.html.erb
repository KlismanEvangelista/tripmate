<div class="container mt-5 body" data-controller="new-review">
  <h1>Edit</h1>
  <%= simple_form_for [@review] do |f| %>
    <%= f.error_notification %>
    <%= f.input :title, label: 'Titulo de la reseÃ±a', required: true, input_html: { class: 'form-control required-input' } %>
    <%= f.input :comment, label: 'Comentario', as: :text, required: true, input_html: { class: 'form-control required-input rich-editor', 'data-new-review-target': 'editor', 'data-richeditor': 'rich-editor' } %>
