<div class="container mt-5">
  <%= link_to :back, class: 'btn btn-dark mb-3' do %>
        <i class="fa-solid fa-arrow-left"></i>
    <% end %>
  <div class="d-flex justify-content-around">
    <div class="card-form">
      <h2>Editar <%= resource_name.to_s.humanize %></h2>
      <div class="form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs flex-column">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Actualmente a la espera de confirmación de: <%= resource.unconfirmed_email %></p>
            <% end %>
            <div>
              <%= f.input :address, label: 'Dirección', required: false %>
            </div>
            <div class="d-flex justify-content-between">
              <div class="w-50">
                <%= f.input :email,
                        label: 'Correo electrónico',
                        required: true,
                        autofocus: true,
                        input_html: { class: "w-100" } %>
              </div>
              <div class="ms-5 w-50">
                <%= f.input :phone,
                        label: 'Teléfono',
                        required: false,
                        input_html: { class: "w-100" }  %>
              </div>
            </div>
            <div class="d-flex justify-content-start">
              <div class="w-50">
                <%= f.input :password,
                        label: 'Nueva contraseña',
                        hint: "Nueva contraseña",
                        required: false,
                        input_html: { autocomplete: "new-password", class: "w-100" } %>
              </div>
              <div class="ms-5 w-50">
                <%= f.input :password_confirmation,
                        label: 'Confirmación de contraseña',
                        hint: "Confirma nueva contraseña",
                        required: false,
                        input_html: { autocomplete: "new-password", class: "w-100" } %>
              </div>
            </div>
            <div>
              <%= f.input :current_password,
                        label: 'Actual contraseña',
                        hint: "Necesitamos tu contraseña actual para confirmar sus cambios",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Guardar" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="w-50">
      <div>
        <h3>Cancelar mi cuenta</h3>
        <h6>No estás contento con tu cuenta?</h6>
        <%= button_to "Cancelar mi cuenta", registration_path(resource_name), class: "btn btn-outline-secondary btn-sm", data: { confirm: "¿Estás seguro?", turbo_confirm: "¿Estás seguro?" }, method: :delete %>
      </div>
    </div>
  </div>
</div>
