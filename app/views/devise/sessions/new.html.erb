<div class="login-container d-flex align-items-center justify-content-center">
  <div class="row login-box">
    <!-- Imagen y slogan -->
    <div class="col-lg-6 d-none d-lg-block p-0">
      <div class="login-image">
        <%= image_tag 'https://i.pinimg.com/564x/f1/73/9d/f1739df179d06a228cb15dce98c5cbb2.jpg', class: 'img-fluid' %>
        <div class="slogan">
          <h1>TripMate</h1>
          <p>«El mundo es demasiado bonito como para viajar solo por internet.»</p>
        </div>
      </div>
    </div>

    <!-- Formulario de Login -->
    <div class="col-lg-6 col-sm-12 login-form">
      <div class="login-form-content">
       <%= link_to "/", class: "container-logo" do %>
          <%= image_tag "logo_tripmate.png", class: "logo" %>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
          <div class="form-group">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control", placeholder: "Correo electrónico" },
                        label: false %>
          </div>
          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "form-control mt-2", placeholder: "Contraseña" },
                        label: false %>
          </div>
          <div class="form-group form-check p-0">
            <%= f.input :remember_me, as: :boolean, label: "Recordarme", input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions text-center">
            <%= f.button :submit, "Ingresar", class: "btn btn-primary btn-block w-100 mb-3" %>
          </div>
        <% end %>
        <div class="alternative-login text-center">
          <p>o</p>
          <div class="social-login">
            <button class="btn btn-outline-secondary">
              <i class="fab fa-google"></i> Google
            </button>
            <button class="btn btn-outline-secondary">
              <i class="fab fa-facebook-f"></i> Facebook
            </button>
            <button class="btn btn-outline-secondary">
              <i class="fab fa-apple"></i> Apple
            </button>
          </div>
        </div>

        <div class="register-now text-center">
          <p>No tienes una cuenta? <%= link_to 'Registrate ahora', new_registration_path(:user) %></p>
        </div>

      </div>
    </div>
  </div>
</div>
