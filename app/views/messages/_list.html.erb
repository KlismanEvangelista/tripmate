<div class="col-4 p-0">
  <div class="header">
    <i class="fa-solid fa-upload"></i>
    Mensajes
  </div>
  <div class="list-group">
    <% plans.each do |plan| %>
      <div class="list-group-item">
        <%= link_to new_plan_message_path(plan),
            class: "list-group-item-action d-flex align-items-center",
            data: { turbo_frame: :message_details, turbo_action: :advance } do %>
          <% if plan.photo.attached? %>
            <%= cl_image_tag plan.photo.key, height: 40, width: 40, crop: :fill, class: 'img-fluid rounded-circle' %>
          <% else %>
            <%= image_tag "sinicono.jpg", height: 40, width: 40, crop: :fill, class: 'img-fluid rounded-circle' %>
          <% end %>
          <%= plan.name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
