<div id="message-<%= message.id %>" class="box">
  <% if message.user.photo.attached? %>
    <div class="header-box d-flex align-items-center">
      <%= cl_image_tag message.user.photo.key, height: 30, width: 30, crop: :fill, class: 'img-fluid rounded-circle' %>
        <% else %>
      <%= image_tag "sinimagen.jpg", height: 30, width: 30, crop: :fill, class: 'img-fluid rounded-circle' %>
        <% end %>
        <small class="text d-flex">
      <strong class="flex-grow-1"><%= message.user.first_name %> <%= message.user.last_name %></strong>
      <i><%= message.created_at.strftime("%l:%M %p - %d/%m/%Y") %></i>
        </small>
    </div>
  <p><%= message.content %></p>
</div>
