<%= simple_form_for(@plan) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :travelers_quantity %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :departament %>
    <%= f.input :start_point,
      input_html: {data: {start_point_autocomplete_target: "start-point"}},
      wrapper_html: {data: {controller: "start-point-autocomplete", start_point_autocomplete_api_key_value:
      ENV["MAPBOX_API_KEY"]}}
    %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to 'Volver a planes', plans_path, class: "btn btn-success" %>
  </div>

  <br>
<% end %>
