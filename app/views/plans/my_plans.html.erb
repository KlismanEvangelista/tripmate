<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to 'Agregar plan', new_plan_path, class: "btn btn-success" %>
  </div>
  <br>
  <br>
  <% @my_plans.each do |plan| %>
    <div>
      <p>
        <strong>Name:</strong>
        <%= plan.name %>
      </p>
      <p>
        <strong>description:</strong>
        <%= plan.description %>
      </p>
      <p>
        <strong>location:</strong>
        <%= plan.location %>
      </p>
      <div class="d-flex gap-2">
        <%= link_to 'Editar', edit_plan_path(plan), class: "btn btn-primary" %>
        <%= link_to 'Eliminar', plan_path(plan), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
    <br>
 <% end %>
</div>
